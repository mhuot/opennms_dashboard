<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<!-- Title: [ ] Report: [ ] [Search] -->

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.outlineBorder {
			/* border: 1px solid #B5B8C8; */
		}
		.padBoxes {
			padding: 2px;
			margin-top: auto;
			margin-bottom: auto;
		}
	</ui:style>
	<g:LayoutPanel ui:field="m_layoutPanel" styleName="{style.outlineBorder}">
		<g:layer top="0" left="0" right="0" height="25px">
			<g:Label text="Add to KSC Report" width="100%" styleName="${style.padBoxes}" />
		</g:layer>
		<g:layer top="25px" left="0" right="0" height="25px">
			<g:Label text="Title:" width="100%" styleName="${style.padBoxes}" ui:field="m_titleLabel" />
		</g:layer>
		<g:layer top="25px" left="50px" right="0" height="25px">
			<g:TextBox ui:field="m_titleBox" width="100%" styleName="${style.padBoxes}" />
		</g:layer>
		<g:layer top="50px" left="0" right="0" height="25px">
			<g:Label text="Report:" width="100%" styleName="${style.padBoxes}" ui:field="m_reportLabel" />
		</g:layer>
		<g:layer top="50px" bottom="0" left="50px" right="55px">
			<g:TextBox ui:field="m_textBox" width="100%" styleName="${style.padBoxes}" />
		</g:layer>
		<g:layer top="50px" bottom="0" right="0" width="53px">
			<g:Button ui:field="m_addButton" width="100%" height="25px" styleName="${style.padBoxes}">Add</g:Button>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 