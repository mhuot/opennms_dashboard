<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui='urn:ui:com.google.gwt.uibinder' 
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:me='urn:import:org.opennms.features.poller.remote.gwt.client'
>
	<ui:style>
		.panelHeader {
			font-weight: bold;
			font-size: 13px;
		}
		.outerTagPanel {
			width: 100%;
			text-align: center;
			vertical-align: middle;
			padding: 10px;
		}
		.tagPanel {
			width: 100%;
			text-align: center;
			vertical-align: middle;
		}
		.clear {
			padding: 3px;
			font-size: 0.8em;
		}
	</ui:style>

	<ui:style field="tagStyles" type="org.opennms.features.poller.remote.gwt.client.TagPanel.TagStyles">
		.selectedTag {
			color: black;
			font-weight: bold;
		}
		.selectedTag A,
		.selectedTag A:hover,
		.selectedTag A:visited
		{
			color: black;
			font-weight: bold;
		}
		.tag0 {
			cursor: pointer;
			font-size: 0.8em;
			/*
			font-weight: 100;
			*/
			display: inline;
			padding: 3px;
			text-decoration: none;
		}
		.tag1 {
			cursor: pointer;
			font-size: 0.9em;
			/*
			font-weight: 100;
			*/
			display: inline;
			padding: 3px;
			text-decoration: none;
		}
		.tag2 {
			cursor: pointer;
			font-size: 1.0em;
			/*
			font-weight: 200;
			*/
			display: inline;
			padding: 3px;
			text-decoration: none;
		}
		.tag3 {
			cursor: pointer;
			font-size: 1.2em;
			/*
			font-weight: 200;
			*/
			display: inline;
			padding: 3px;
			text-decoration: none;
		}
		.tag4 {
			cursor: pointer;
			font-size: 1.4em;
			/*
			font-weight: 300;
			*/
			display: inline;
			padding: 3px;
			text-decoration: none;
		}
		.tag5 {
			cursor: pointer;
			font-size: 1.6em;
			/*
			font-weight: 300;
			*/
			display: inline;
			padding: 3px;
			text-decoration: none;
		}
		.tag6 {
			cursor: pointer;
			font-size: 1.8em;
			/*
			font-weight: 400;
			*/
			display: inline;
			padding: 3px;
			text-decoration: none;
		}
		.tag7 {
			cursor: pointer;
			font-size: 2.0em;
			/*
			font-weight: 400;
			*/
			display: inline;
			padding: 3px;
			text-decoration: none;
		}
		.tag8 {
			cursor: pointer;
			font-size: 2.2em;
			/*
			font-weight: 500;
			*/
			display: inline;
			padding: 3px;
			text-decoration: none;
		}
		.tag9 {
			cursor: pointer;
			font-size: 2.4em;
			/*
			font-weight: 500;
			*/
			display: inline;
			padding: 3px;
			text-decoration: none;
		}
	</ui:style>

	<g:VerticalPanel addStyleNames="{style.outerTagPanel}">
		<g:Label text="Tags" addStyleNames="{style.panelHeader}"/>
		<g:FlowPanel addStyleNames="{style.tagPanel}" ui:field="tagPanel"/>
		<g:Hyperlink ui:field="clearTags" addStyleNames="{style.clear}" text="clear selected tags"/>
	</g:VerticalPanel>

</ui:UiBinder>
